<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/reset_success"
        android:layout_width="300dp"
        android:layout_height="180dp"
        app:cardBackgroundColor="@color/gray_status"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/montserratsemibold"
            android:text="Reset Koneksi"
            android:textSize="20sp" />

        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/montserratregular"
            android:text="Konfigurasi koneksi akan dihapus dan perangkat terputus dari jaringan WiFi"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/lanjutkan"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/submit_button"
            android:text="Lanjutkan"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:fontFamily="@font/montserratbold"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_marginStart="160dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/cancel_button"
            android:text="Batalkan"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:fontFamily="@font/montserratbold"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/reset_dissmis"
        android:layout_width="300dp"
        android:layout_height="180dp"
        app:cardBackgroundColor="@color/gray_status"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/montserratsemibold"
            android:text="Reset Koneksi"
            android:textSize="20sp" />

        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/montserratregular"
            android:text="Untuk melakukan reset koneksi perangkat harus dalam kondisi hidup dan terkoneksi. Pastikan alat berada didekat anda serta tidak digunakan oleh pengguna"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/kembali"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:background="@drawable/submit_button"
            android:text="Kembali"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:fontFamily="@font/montserratbold"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>